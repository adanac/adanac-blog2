<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <filter>
        <filter-name>accessLog</filter-name>
        <filter-class>com.adanac.module.blog.filter.AccessLogFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ip</filter-name>
        <filter-class>com.adanac.module.blog.filter.IpFilter</filter-class>
    </filter>
    
    <filter>
        <filter-name>admin</filter-name>
        <filter-class>com.adanac.module.blog.filter.AdminFilter</filter-class>
    </filter>
    
    <filter>
        <filter-name>dynamic</filter-name>
        <filter-class>com.adanac.module.blog.filter.DynamicFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>accessLog</filter-name>
        <url-pattern>/blog/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>accessLog</filter-name>
        <url-pattern>/html/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>accessLog</filter-name>
        <url-pattern>/dota/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ip</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>admin</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>admin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>dynamic</filter-name>
        <url-pattern>*.ftl</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>dynamic</filter-name>
        <url-pattern>*.xml</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>callback</servlet-name>
        <servlet-class>com.adanac.module.blog.servlet.Callback</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>com.adanac.module.blog.mvc.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>callback</servlet-name>
        <url-pattern>/oauth2/callback</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.adanac.module.blog.listener.ConfigurationListener</listener-class>
    </listener>
    
    <welcome-file-list>
        <welcome-file>html/index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/html/error.html</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/html/not_found.html</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/html/login_warn.html</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/html/error.html</location>
    </error-page>

</web-app>